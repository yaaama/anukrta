# #-*- mode: yaml -*-

CompileFlags:                     # Tweak the parse settings
  Add: [-xc, -Wall, -Wextra, -std=c11]
# Remove: -W*                     # strip all other warning-related flags
  Compiler: clang               # Change argv[0] of compile flags to `clang`

Diagnostics:
  Suppress: [unused-function, unused-variable,
             readability-avoid-unconditional-preprocessor-if, unused-parameter, readability-redundant-declaration ]
  ClangTidy:
  # Add: [bugprone-*, performance-*, readability-*, misc-*, clang-analyzer-*]
    FastCheckFilter: Loose
  Includes:
  # IgnoreHeader: ["criterion*"]
    AnalyzeAngledIncludes: false

MissingIncludes: Strict
Completion:
  AllScopes: true

Documentation:
  CommentFormat: Doxygen

Index:
  StandardLibrary: true
  Background: Build
